@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
}

<html>
	<head>
		<title>SpejderLoppen</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">		
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		<link rel="stylesheet" href="/media/css/main.css" />
		<link rel="stylesheet" href="/media/css/calendar.css" />
	</head>
	
	<body>

		<!-- Navigation -->
	<div class="container shadow p-1 mb-1 rounded krg-blue">
		<nav class="navbar navbar-expand">
				<!-- Links -->
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link text-white" href="/"><img src="/media/krg_logo.png" width="80%" /></a>
				</li>
				@foreach (var item in Model.DescendantsOrSelfOfType("TextPage"))
				{
					<li class="nav-item">
						<a class="nav-link text-white fs-5" href="@item.Url()">@item.Name</a>
					</li>
				}
			</ul>
		</nav>
	</div>
		
	<div class="container p-2">
		@RenderBody()
	</div>
		
	<!-- Footer -->
	<div class="container footer shadow p-4 rounded krg-blue">
		<div class="container">
		    @Model.Value("footerText")
		</div>
	</div>
	
	<!-- Scripts -->
	<script src="https://www.unpkg.com/aspnet-client-validation/dist/aspnet-validation.min.js" crossorigin="anonymous"></script>
	<script>
		const v = new aspnetValidation.ValidationService()
		v.bootstrap()
	</script>

	@* <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script> *@
	@* <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script> *@
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

	
	</body>
</html>