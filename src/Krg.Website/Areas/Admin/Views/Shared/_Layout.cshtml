@{
	Layout = null;
}

<html lang="da">
	<head>
		<title>Admin</title>
		<meta charset="utf-8" />
		<meta name="description" content="Administration">
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
