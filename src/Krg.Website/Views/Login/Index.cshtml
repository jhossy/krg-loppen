@model Krg.Website.Models.LoginModelDto

<h1>Login here</h1>

<div class="row">
    <div class="col">
        <section>
            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <hr />
                <div class="mb-3 row">
                    @Html.Label("Email", "Email", new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.TextBox("Email", "", new { @class = "form-control", placeholder = "Email", data_val = "true", @data_val_required = "Email is required", autocomplete = "on"})
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                </div>
                <div class="mb-3 row">
                    @Html.Label("Password", "Password", new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.Password("Password", "", new { @class = "form-control", placeholder = "Password"})
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                </div>
                <div class="mb-3 row">
                    <div>
                        <input type="submit" class="btn btn-outline-secondary float-end" value="Login"/>
                    </div>
                </div> 
            }
        </section>
    </div>
</div>